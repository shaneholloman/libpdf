{
  "name": "@libpdf/core",
  "version": "0.0.1",
  "description": "A modern PDF library for TypeScript - parsing and generation",
  "module": "src/index.ts",
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}

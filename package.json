{
  "name": "@libpdf/core",
  "version": "0.0.1",
  "description": "A modern PDF library for TypeScript - parsing and generation",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "examples": "bun run examples/run-all.ts",
    "examples:quiet": "bun run examples/run-all.ts --quiet",
    "docs:dev": "bun run --cwd apps/docs dev",
    "docs:build": "bun run --cwd apps/docs build",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/pako": "^2.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.18.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@noble/ciphers": "^2.1.1",
    "@noble/hashes": "^2.0.1",
    "pako": "^2.1.0",
    "pkijs": "^3.3.3",
    "zod": "4"
  }
}
